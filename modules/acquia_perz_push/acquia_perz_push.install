<?php

/**
 * @file
 * Acquia Perz - module install file.
 */

use Drupal\rest\Entity\RestResourceConfig;
use Drupal\rest\RestResourceConfigInterface;

/**
 * Implements hook_install().
 */
function acquia_perz_push_install() {
  // Create "Acquia Perz - Slow Endpoint for testing timeouts" rest endpoint
  // (for testing purposes).
  $slow_endpoint_rest_id = 'acquia_perz_push_slow_endpoint';
  $slow_endpoint_rest = RestResourceConfig::load($slow_endpoint_rest_id);
  if (empty($slow_endpoint_rest)) {
    RestResourceConfig::create([
      'id' => $slow_endpoint_rest_id,
      'granularity' => RestResourceConfigInterface::RESOURCE_GRANULARITY,
      'configuration' => [
        'methods' => ['GET'],
        'formats' => ['json'],
        'authentication' => ['basic_auth'],
      ],
    ])->save();
  }
}

/**
 * Implements hook_uninstall().
 */
function acquia_perz_push_uninstall() {
  // Delete "Acquia Perz - Slow Endpoint for testing timeouts" rest endpoint.
  $slow_endpoint_rest = RestResourceConfig::load('acquia_perz_push_slow_endpoint');
  if ($slow_endpoint_rest) {
    $slow_endpoint_rest->delete();
  }
}

